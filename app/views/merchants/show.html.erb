<%= @merchant.name %>
<%= link_to "#{@merchant.name} items", "/merchants/merchant_id/items" %>
<%= link_to "#{@merchant.name} invoices", "/merchants/merchant_id/invoices" %>

<% @top5.each do |customer|%>
    <p>Name: <%= customer.first_name %> <%= customer.last_name %>, Transactions: <%= customer.transactions_count %></p>
<%end%>

<section id='packaged'><h2>Items Ready to Ship</h2></section>

<% @merchant.pending_invoices.each do |invoice| %>
  <% invoice.items.each do |item| %>
  <section id='invoice<%=invoice.id%>-item<%=item.id%>'>
    <%= item.name %> <%= link_to invoice.id, invoice_path(invoice) %> create at: <%= invoice.created_at.strftime("%A, %B%e, %Y") %>
    </section>
  <% end %>
<% end %>