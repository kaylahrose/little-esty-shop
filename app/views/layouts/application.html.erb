<!DOCTYPE html>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

<html>
  <head>
    <title>LittleEstyShop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= api_helper.repo_name %>
    <div class="title">Little Esty Shop</div>
    <% if controller_path.starts_with?("admin") %>
      <%= render partial: "partials/admin_header" %>
    <% end %>
    <hr><br>
    <%= yield %>
  </body>
</html>
